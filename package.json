{
  "private": true,
  "name": "honest-reviews",
  "version": "1.0.0",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:tailwind && remix build",
    "build:tailwind": "tailwindcss -i ./css/main.css -o ./app/css/main.css --minify",
    "dev": "concurrently \"npm run dev:tailwind\" \"npm run dev:remix\"",
    "dev:remix": "remix dev",
    "dev:tailwind": "tailwindcss -i ./css/main.css -o ./app/css/main.css --watch",
    "dev:init": "prisma migrate reset --force",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@simonsinclair/pgr": "^1.0.1",
    "chart.js": "^3.8.0",
    "dayjs": "^1.11.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.1.0",
    "@playwright/test": "^1.22.2",
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/node": "^17.0.36",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@vitejs/plugin-react": "^1.3.2",
    "c8": "^7.11.3",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "jsdom": "^19.0.0",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "prisma": "^3.14.0",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.13.1"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
